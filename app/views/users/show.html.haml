.col-md-8.col-md-offset-2
	%h1 Your Farms & Connections

	- if @farms.length >= 1
		%h2 Farms You Manage
		%table{:class => "table table-striped table-hover"}
			%thead
				%th Name
				%th Address
				%th Days Open
				%th Hours Open
				%th Phone Number
			%tbody
				- @farms.each do |f|
					%tr
						%td
							= link_to f.name, farm_path(f), method: "get"
						%td= f.address
						%td= f.days_open
						%td= f.hours_open
						%td= f.phone_num

	- if @farms_followed.length >= 1
		%h2 Farms You Follow
		%table{:class => "table table-striped table-hover"}
			%thead
				%th Name
				%th Address
				%th Days Open
				%th Hours Open
				%th Phone Number
			%tbody
				- @farms_followed.each do |f|
					%tr
						%td
							= link_to f.name, farm_path(f), method: "get"
						%td= f.address
						%td= f.days_open
						%td= f.hours_open
						%td= f.phone_num
	- else
		%h2 You Haven't Followed any Farms Yet
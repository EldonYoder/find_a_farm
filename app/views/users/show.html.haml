.col-md-8.col-md-offset-2
	%h1 Your Farms & Connections

	- if @farms.length >= 1
		%h2 Farms You Manage
		%table{:class => "table table-striped table-hover"}
			%thead
				%th Name
				%th Address
				%th Days Open
				%th Hours Open
				%th Phone Number
			%tbody
				- @farms.each do |f|
					%tr
						%td
							= link_to f.name, farm_path(f), method: "get"
						%td= f.address
						%td= f.days_open
						%td= f.hours_open
						%td= f.phone_num

	- if @connections.length >= 1
		%h2 Farms You Follow
		%table{:class => "table table-striped table-hover"}
			%thead
				%th Name
				%th Address
				%th Days Open
				%th Hours Open
				%th Phone Number
				%th Quit Following
			%tbody
				- @connections.each do |f|
					%tr
						%td
							= link_to f.farm.name, farm_path(f.farm), method: "get"
						%td= f.farm.address
						%td= f.farm.days_open
						%td= f.farm.hours_open
						%td= f.farm.phone_num
						%td
							= link_to "Quit Following", connection_path(f), method: :delete
	- else
		%h2 You Haven't Followed any Farms Yet